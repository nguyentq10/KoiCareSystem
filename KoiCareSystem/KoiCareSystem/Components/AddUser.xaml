<Window x:Class="KoiCareSystem.Components.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoiCareSystem.Components"
        mc:Ignorable="d"
        Title="AddUser" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Add User" FontSize="36" FontWeight="Bold" Margin="0,5,0,350" HorizontalAlignment="Center"/>
        <StackPanel Margin="10,89,10,10">
            <TextBox x:Name="EmailTextBox" Text="Email" Margin="5" FontSize="24"/>
            <TextBox x:Name="PasswordTextBox" Text="Password" Margin="5" FontSize="24"/>
            <TextBox x:Name="NameTextBox" Text="Name" Margin="5" FontSize="24"/>
            <ComboBox x:Name="RoleComboBox" Margin="5" FontSize="24">
                <ComboBoxItem Content="member"/>
                <ComboBoxItem Content="admin"/>
                <ComboBoxItem Content="manager"/>
            </ComboBox>
        </StackPanel>
        <Button Content="Add User" Click="AddUserButton_Click" Margin="0,295,0,83" FontSize="24" HorizontalAlignment="Center" Width="136"/>
    </Grid>
</Window>
