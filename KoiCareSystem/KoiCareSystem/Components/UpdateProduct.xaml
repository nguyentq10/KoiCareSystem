<Window x:Class="KoiCareSystem.Components.UpdateProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UpdateProduct" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Update Product" FontSize="36" FontWeight="Bold" Margin="0,5,0,350" HorizontalAlignment="Center"/>
        <StackPanel Margin="10,89,10,10">
            <TextBox x:Name="NameTextBox" Text="Name" Margin="5" FontSize="24"/>
            <TextBox x:Name="DescriptionTextBox" Text="Description" Margin="5" FontSize="24"/>
            <TextBox x:Name="PriceTextBox" Text="Price" Margin="5" FontSize="24"/>
            <TextBox x:Name="ThumbnailTextBox" Text="Thumbnail" Margin="5" FontSize="24"/>
            <TextBox x:Name="ExternalUrlTextBox" Text="External URL" Margin="5" FontSize="24"/>
            <ComboBox x:Name="CategoryComboBox" Margin="5" FontSize="24" DisplayMemberPath="Name" SelectedValuePath="CategoryId"/>
            <CheckBox x:Name="StatusCheckBox" Content="Status" Margin="5" FontSize="24"/>
        </StackPanel>
        <Button Content="Update Product" Click="UpdateUserButton_Click" Margin="0,451,0,83" FontSize="24" HorizontalAlignment="Center" Width="204"/>
    </Grid>
</Window>
