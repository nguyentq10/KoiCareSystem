<Window x:Class="KoiCareSystem.Components.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Category" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Add Category" FontSize="36" FontWeight="Bold" Margin="0,5,0,350" HorizontalAlignment="Center"/>
        <StackPanel Margin="20,69,20,20">
            <TextBlock Text="Name" FontSize="20"/>
            <TextBox x:Name="NameTextBox" FontSize="20" Margin="0,10,0,20"/>
            <TextBlock Text="Description" FontSize="20"/>
            <TextBox x:Name="DescriptionTextBox" FontSize="20" Margin="0,10,0,20"/>
            <Button Content="Save" Click="SaveButton_Click" FontSize="20" Width="100" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
