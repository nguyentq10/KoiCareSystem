<Window x:Class="KoiCareSystem.Components.UpdateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoiCareSystem.Components"
        mc:Ignorable="d"
        Title="UpdateUser" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Height="434" VerticalAlignment="Top">
        <TextBlock Text="Update User" FontSize="36" FontWeight="Bold" Margin="0,5,0,350" HorizontalAlignment="Center"/>
        <StackPanel Margin="10,89,10,40">
            <TextBox x:Name="EmailTextBox" Text="Email" Margin="5" FontSize="24"/>
            <TextBox x:Name="PasswordTextBox" Text="Password" Margin="5" FontSize="24"/>
            <TextBox x:Name="NameTextBox" Text="Name" Margin="5" FontSize="24"/>
            <ComboBox x:Name="RoleComboBox" Margin="5" FontSize="24">
                <ComboBoxItem Content="member"/>
                <ComboBoxItem Content="admin"/>
                <ComboBoxItem Content="manager"/>
            </ComboBox>
        </StackPanel>
        <Button Content="Update User" Click="UpdateUserButton_Click" Margin="0,294,0,88" FontSize="24" HorizontalAlignment="Center" Width="148"/>
    </Grid>
</Window>
