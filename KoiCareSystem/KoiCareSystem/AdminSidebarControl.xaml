<UserControl x:Class="KoiCareSystem.AdminSidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KoiCareSystem"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="200">
    <StackPanel Width="200" Background="LightGray">
        <Image Height="100" Width="100" Source="/Images/Fpt_TTKoi_logo.png" Margin="50"/>
        <Button x:Name="Users" Content="Users" Height="50" Click="UsersButton_Click"/>
        <Button x:Name="Categories" Content="Categories" Height="50" Click="CategoriesButton_Click"/>
        <Button x:Name="Recommendations" Content="Recommendations" Height="50" Click="RecommendationButton_Click"/>
        <StackPanel VerticalAlignment="Bottom">
            <Button x:Name="LogOutButton" Content="Log Out" Height="50" Click="LogOutButton_Click" Margin="10, 300, 10, 10"/>
            <Button x:Name="QuitButton" Content="Quit" Height="50" Click="QuitButton_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>
